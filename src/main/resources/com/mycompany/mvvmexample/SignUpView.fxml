<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="modelview.SignUpViewController">
<stylesheets>
        <URL value="@/styles/loginview.css" />
    </stylesheets>
   <children>
      <VBox prefHeight="400.0" prefWidth="400.0">
         <children>
            <Label alignment="CENTER" prefWidth="400.0" text="User Registration">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="75.0" />
               </VBox.margin>
            </Label>
            <HBox alignment="TOP_RIGHT" prefWidth="200.0">
               <children>
                  <Label text="Email">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="emailTextField" alignment="TOP_LEFT" prefWidth="130.0">
                     <HBox.margin>
                        <Insets right="120.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefWidth="200.0">
               <children>
                  <Label text="Password">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="passwordTextField" alignment="TOP_LEFT" prefWidth="130.0">
                     <HBox.margin>
                        <Insets right="120.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefWidth="400.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#createAccountButtonPress" text="Create Account" />
               </children>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="statusMessageLabel" alignment="CENTER" prefWidth="400.0" text="Status Message" visible="false">
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </children>
</AnchorPane>
